<div class="divfold50">
	<div class="col-md-6">

		

			<h2>Sign up</h2>

		<div class="divfold50inner">

			<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<%= f.error_notification %>


			

			<div class="field">
				<%= f.label :First_Name %><br />
				<%= f.text_field :FirstName, autofocus: true %>
			</div>


			<div class="field">
				<%= f.label :Last_Name %><br />
				<%= f.text_field :LastName %>
			</div>

			<div class="field">
			    <%= f.label :User_Name %><br />
			    <%= f.text_field :UserName %>
			</div>


			<div class="field">  
				<div><%= f.label :date_of_birth %><br /></div>
				<div><%= f.date_select :date_of_birth %></div>
			</div>

			<div class="field">
				Gender <br />
		  		<%= f.radio_button :is_female, "true" %> <%= f.label :is_female, "Female" %>
		  		<%= f.radio_button :is_female, "false" %> <%= f.label :is_female, "Male" %>
			</div>


            <div class="field">
                  <%= f.label :Profile_Picture %>
                  <%= f.file_field :mypic %>
            </div>
            
		</div>

		<div class="divfold50inner">


			<div class="field">  
				<div class="divfold1b">
					<%= f.input :Age, :collection => ['18-21', '22-26', '27-30', '31-40', '41-50', '51-70', 'over 70'], :selected => ["22-26"] %>
				</div>
			</div>

			<div class="field">  
				<div class="divfold1b">
					<%= f.input :Race, :collection => ['Black', 'White', 'Hispanic', 'Asian'], :selected => ["Black'"] %>
				</div>
			</div>

			<div class="field">
				Are you Kenyan <br />
		  		<%= f.radio_button :is_kenyan, "true" %> <%= f.label :is_kenyan, "Yes" %>
		  		<%= f.radio_button :is_kenyan, "false" %> <%= f.label :is_kenyan, "No" %>
			</div>

			<div class="field">
				<div class="divfold1b">
		  			<%= f.input :Country, as: :country, priority: ['KE', 'US'] %>
		  		</div>
			</div>

			<div class="field">  
				<div><%= f.label :City %><br /></div>
				<div><%= f.text_field :City %></div>
			</div>

		</div>

	</div>

	<div class="col-md-6">

		<h2>More info</h2>

		<div class="divfold50inner">


			<div class="field">  
				<div><%= f.label :Short_Bio %><br /></div>
				<div><%= f.text_field :ShortBio %></div>
			</div>

			<div class="field">  
				<div><%= f.label :Long_Bio %><br /></div>
				<div><%= f.text_field :LongBio %></div>
			</div>

			<div class="field">  
				<div class="divfold1b">
					<%= f.input :Education, :collection => ['None','Primary','High school','College','Post graduate'], :selected => ["None"] %>
				</div>
			</div>

			<div class="field">  
				<div><%= f.label :Hobby %><br /></div>
				<div><%= f.text_field :Hobby %></div>
			</div>

			<div class="field">  
				<div class="divfold1b">
					<%= f.input :Religion, :collection => ['Christian', 'Islam', 'Hindu', 'Jew','African tradition', 'Atheist', 'Others'], :selected => ["Christian"] %>
				</div>
			</div>

			<div class="field">
				Can Move <br />
		  		<%= f.radio_button :CanMove, "true" %> <%= f.label :CanMove, "Yes" %>
		  		<%= f.radio_button :CanMove, "false" %> <%= f.label :CanMove, "No" %>
			</div>
		</div>



		<div class="divfold50inner">

			<div class="field">  
				<div><%= f.label :Looking_For %><br /></div>
				<div><%= f.text_field :LookingFor %></div>
			</div>

		</div>


		<div class="divfold50inner">



			<div class="field">
		    <%= f.input :email, required: true, autofocus: true %>
		    </div>

		    <div class="field">
		    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
		    </div>

		    <div class="field">
		    <%= f.input :password_confirmation, required: true %>
		    </div>

		    
		</div>



	</div>

</div>

<div class="divfold50">
	<div class="form-actions">
    	<%= f.button :submit, "Sign up" %>
	</div>
	<%= render "devise/shared/links" %>
</div>


<% end %>


