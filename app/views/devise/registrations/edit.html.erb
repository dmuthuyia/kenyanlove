<div class="divfold50">

  <div class="col-md-6">

      <h2>Edit <%= resource_name.to_s.humanize %></h2>




        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>


      <div class="divfold50inner">
              <div class="form-inputs">
                <%= f.input :email, required: true, autofocus: true %>
              </div>

              <div class="field">
                <%= f.label :First_Name %><br />
                <%= f.text_field :FirstName, autofocus: true %>
              </div>


              <div class="field">
                <%= f.label :Last_Name %><br />
                <%= f.text_field :LastName %>
              </div>

              <div class="field">
                  <%= f.label :User_Name %><br />
                  <%= f.text_field :UserName %>
              </div>


              <div class="field">  
                <div><%= f.label :date_of_birth %><br /></div>
                <div><%= f.date_select :date_of_birth %></div>
              </div>

              <div class="field">
                Gender <br />
                  <%= f.radio_button :is_female, "true" %> <%= f.label :is_female, "Female" %>
                  <%= f.radio_button :is_female, "false" %> <%= f.label :is_female, "Male" %>
              </div>

              <div class="field">
                    <%= f.label :Profile_Picture %>
                    <%= f.file_field :mypic %>
              </div>
      </div>
      <div class="divfold50inner">


              <div class="field">  
                  <div class="divfold1b">
                    <%= f.input :Age, :collection => ['18-21', '22-26', '27-30', '31-40', '41-50', '51-70', 'over 70'] %>
                  </div>
              </div>

              <div class="field">  
                      <div class="divfold1b">
                        <%= f.input :Race, :collection => ['Black', 'White', 'Hispanic', 'Asian'] %>
                      </div>
              </div>

              <div class="field">
                Are you Kenyan <br />
                  <%= f.radio_button :is_kenyan, "true" %> <%= f.label :is_kenyan, "Yes" %>
                  <%= f.radio_button :is_kenyan, "false" %> <%= f.label :is_kenyan, "No" %>
              </div>

              <div class="field">
                    <div class="divfold1b">
                        <%= f.input :Country, as: :country, priority: ['KE', 'US'] %>
                    </div>
                 
              </div>

              <div class="field">  
                <div><%= f.label :City %><br /></div>
                <div><%= f.text_field :City %></div>
              </div>

      </div>

  </div>

  <div class="col-md-6">

    <h2>More info</h2>

      <div class="divfold50inner">

              <div class="field">  
                <div><%= f.label :Short_Bio %><br /></div>
                <div><%= f.text_field :ShortBio %></div>
              </div>

              <div class="field">  
                <div><%= f.label :Long_Bio %><br /></div>
                <div><%= f.text_field :LongBio %></div>
              </div>

              <div class="field">  
                  <div class="divfold1b">
                    <%= f.input :Education, :collection => ['None','Primary','High school','College','Post graduate'] %>
                  </div>
              </div>

              <div class="field">  
                <div><%= f.label :Hobby %><br /></div>
                <div><%= f.text_field :Hobby %></div>
              </div>

              <div class="field">  
                  <div class="divfold1b">
                    <%= f.input :Religion, :collection => ['Christian', 'Islam', 'Hindu', 'Jew','African tradition', 'Atheist', 'Others'] %>
                  </div>
              </div>

              <div class="field">
                Can Move <br />
                  <%= f.radio_button :CanMove, "true" %> <%= f.label :CanMove, "Yes" %>
                  <%= f.radio_button :CanMove, "false" %> <%= f.label :CanMove, "No" %>
              </div>
      </div>

      <div class="divfold50inner">


              <div class="form-inputs">

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                <% end %>

                <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
                <%= f.input :password_confirmation, required: false %>
                <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
              </div>


      </div>


              <div class="form-actions">
                <%= f.button :submit, "Update" %>
              </div>

            <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

            <%= link_to "Back", :back %>

  </div>

            <% end %>

</div>
